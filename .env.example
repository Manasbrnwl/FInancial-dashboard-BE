NODE_ENV=development
PORT=3000

# Dashboard authentication (username is the email to receive OTP)
AUTH_ALLOWED_EMAILS=alice@example.com,bob@example.com
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1h
OTP_EXPIRATION_MINUTES=10

# External API login credentials
API_USERNAME=FYER
API_PASSWORD=HO2
LOGIN_API_URL=https://auth.truedata.in/token

# Email delivery for OTPs and alerts
EMAIL_USER=your_gmail_username@gmail.com
EMAIL_PASS=gmail-app-password
RECEIVER_EMAIL=recipient@example.com

ACCESS_TOKEN=token-value-for-market-data

# DhanHQ API Configuration (for BSE equity data)
# Generate token from: https://web.dhan.co > Profile > Access DhanHQ APIs
# Token is valid for 24 hours and will be auto-renewed by the application
DHAN_ACCESS_TOKEN=your-dhan-access-token-here
DHAN_CLIENT_ID=your-dhan-client-id-here

# BSE Equity Fetch Configuration
# Delay between API requests in milliseconds (default: 2000ms = 2 seconds)
# Increase this value if you encounter rate limiting (e.g., 3000 or 5000)
BSE_FETCH_DELAY_MS=2000

DATABASE_URL=postgresql://postgres:root@localhost:5433/Finance_Dashboard?schema=market_data
